<%= form_with url: user_index_path, model: @user, method: :post do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email address" %>
    <%= form.text_field :email, type: :email, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= form.label :password, "Password" %>
    <%= form.text_field :password, type: :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :re_password, "Re-password" %>
    <%= form.text_field :password_confirmation, type: :password, class: "form-control" %>
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
<% end %>